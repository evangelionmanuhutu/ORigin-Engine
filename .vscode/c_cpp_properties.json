{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/ORigin/vendor/origin-glfw/include",
                "${workspaceFolder}/ORigin/sources",
                "${workspaceFolder}/ORigin/sources/Origin",
                "${workspaceFolder}/ORigin-Editor/sources/",
                "${workspaceFolder}/ORigin-Runtime/sources/",
                "${workspaceFolder}/Sandbox/sources/",
                "/usr/include/"
            ],
            "defines": [
                "OGN_PLATFORM_LINUX",
                "_GLFW_X11",
                "VK_VERSION_1_0"
            ],
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "linux-gcc-x64",
            "mergeConfigurations": false,
            "configurationProvider": "ms-vscode.cmake-tools"
        },
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/ORigin/vendor/origin-glfw/include/",
                "${workspaceFolder}/ORigin/sources/",
                "${workspaceFolder}/ORigin/sources/Origin/",
                "${workspaceFolder}/ORigin-Editor/sources/",
                "${workspaceFolder}/ORigin-Runtime/sources/",
                "${workspaceFolder}/Sandbox/sources/",
                "${VULKAN_SDK}/Include/"
            ],
            "defines": [
                "OGN_PLATFORM_WINDOWS"
            ],
            "cStandard": "c17",
            "cppStandard": "gnu++20",
            "mergeConfigurations": false
        }
    ],
    "version": 4
}